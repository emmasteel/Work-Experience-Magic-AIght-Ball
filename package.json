{
  "name": "magic-aight-ball",
  "version": "1.0.0",
  "description": "ðŸŽ± Magic AIght Ball - AI-powered fortune telling web app for work experience students",
  "keywords": ["magic-8-ball", "ai", "azure-openai", "react", "nodejs", "work-experience"],
  "author": "Work Experience Team",
  "license": "MIT",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:shared && npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:shared": "cd shared && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "setup": "npm install && npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd frontend && npm install",
    "setup:backend": "cd backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/emmasteel/Work-Experience-Magic-AIght-Ball.git"
  },
  "bugs": {
    "url": "https://github.com/emmasteel/Work-Experience-Magic-AIght-Ball/issues"
  },
  "homepage": "https://github.com/emmasteel/Work-Experience-Magic-AIght-Ball#readme"
}